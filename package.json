{
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@types/bn.js": "^4.11.4",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.19",
    "bn.js": "^4.11.8",
    "chai": "^4.2.0",
    "ethers": "^5.0.24",
    "hardhat": "^2.0.7",
    "hardhat-deploy": "^0.7.0-beta.49",
    "openzeppelin-solidity": "^2.1.2",
    "truffle-assertions": "^0.7.2",
    "typechain": "^0.3.11",
    "typescript": "^4.2.2",
    "web3": "^1.3.5"
  },
  "scripts": {
    "clean": "rm -rf ./build/",
    "build:contracts": "truffle compile",
    "build:types": "typechain --target truffle './build/**/*.json'",
    "fix:truffle-typings": "sed -i.bak -e 's/= import(\"web3\")/= typeof import(\"web3\")/' node_modules/truffle-typings/index.d.ts",
    "postbuild:types": "sed -i.bak -e 's/BigNumber/BN/g' -e '/bignumber\\.js/d' types/truffle-contracts/index.d.ts",
    "build:js": "yarn run tsc -p .",
    "build": "yarn build:contracts && yarn build:types && yarn fix:truffle-typings && yarn build:js",
    "test": "truffle test"
  },
  "dependencies": {
    "@eth-optimism/contracts": "0.2.7",
    "@eth-optimism/hardhat-ovm": "^0.0.3",
    "@eth-optimism/solc": "0.7.6-alpha.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.2",
    "@truffle/hdwallet-provider": "^1.2.6",
    "eth-gas-reporter": "^0.2.19",
    "rimraf": "^2.6.3",
    "solidity-coverage": "^0.7.0",
    "truffle": "^5.3.0",
    "truffle-error": "^0.0.5",
    "truffle-security": "^1.5.5",
    "truffle-typings": "^1.0.8",
    "web3-eth": "^1.2.6",
    "web3-utils": "^1.2.6"
  },
  "version": "0.0.0",
  "os": [
    "linux",
    "darwin"
  ]
}
